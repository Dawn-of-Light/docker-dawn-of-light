#!/bin/bash

# $IMAGE_NAME var is injected into the build so the tag is correct. 

SOURCE_COMMIT="$(git rev-parse --short HEAD)"

BUILD_VERSION="$(curl -s "https://api.github.com/repos/Dawn-of-Light/DOLSharp/releases/latest" | sed -n 's/.*"tag_name": "\([0-9.]\+\)".*/\1/p')"

echo "Hook Build with values: VCS_REF:$SOURCE_COMMIT, BUILD_VERSION:$BUILD_VERSION, IMAGE_NAME:$IMAGE_NAME"
docker build \
  --build-arg VCS_REF="$SOURCE_COMMIT" \
  --build-arg BUILD_DATE=$(date -u +"%Y-%m-%dT%H:%M:%SZ") \
  --build-arg BUILD_VERSION="$BUILD_VERSION" \
-t $IMAGE_NAME .
